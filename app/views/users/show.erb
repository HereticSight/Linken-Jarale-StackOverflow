<div class="user-info">

  <h3><%= @user.display_name %></h2>

      Stats:
      <ul id= "">

        <li>Posts Created: <%= @user.posts.length %></li>
        <li>Posts Answered: <%= @user.answers.length %></li>
        <li>Answers Accepted: <%= @user.accepted_answers %></li>
        <li>Comments Created: <%= @user.comments.length %></li>
        <li>Total Votes Cast: <%= @user.votes.length %></li>
      </ul>

  <h4>Active Threads: </h4>
    <div class="content">
      <p class="top_questions">Top Questions<p>
        <% @last_ten_posts = Post.find_by(user_id: @user.id) %>
        <% @last_ten_posts.each do |post| %>
          <br><article class ="single_post">
            <p><div class="vote_count"><%= post.votes.count %><br>votes<br></div>
            <div class="answer_count"><%= post.answers.count %>
              <% if post.answers.count == 1 %>
                <br>answer</br>
              <% else %>
                <br>answers</br>
              <%end%>
            </div>
            <div class="post_title"><%= post.title %></p></div></p>
           </article>
        <% end %>
    </div>
  </div>
